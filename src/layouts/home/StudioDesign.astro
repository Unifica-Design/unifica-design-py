        .image-container {
            position: relative;
            display: inline-block;
        }

        .image-container img {
            display: block;
            width: 100%;
            height: 100%;
        }


        .image-container::after {
            content: '';
            display: block;
        }
    }


    .img-background{
        width: 267px;
        height: 430px;
        object-fit: cover;
        object-position: 50% 50%;
    }

    .content-img{
        width: 641px;
        height: 505px;
    }
