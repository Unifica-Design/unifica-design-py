    .bg-quote {
        background: linear-gradient(147deg, #05125ef3 0%, #163079ef 48.15%, #05125ef5 100%),url("/img/paralax_bg.webp") center center no-repeat;
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
        
    }

    .img-background{
        width: 226px;
        height: 416px;
        object-fit: cover;
        object-position: 50% 50%;
