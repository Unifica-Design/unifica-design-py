---
import Container from "../Container.astro"
import Button from "../../components/Buttons/Button.astro"
---

<Container>
    <section class="pt-8" id="studi-web">
        <div>
            <div class="h-full pt-8">
                    <div class="relative pt-6 bg-cover bg-[50%] h-[56rem] sm:h-[36rem] bg-no-repeat  bottom-10 md:bottom-0 ">
                        <div class="flex justify-center items-center h-full bg-fixed opacity-15 image-container">
                            <img
                            src="/img/studio_web_section/bg_igm.webp"
                            class=" width-[505px] height-[505px] object-cover masked-bg" 
                            alt="background studio"
                            />
                        </div>
                    <div
                      class="absolute z-10 bottom-0 left-0 right-0 top-0 w-full  bg-fixed h-full"
                      >
                      <div class="container flex flex-col h-full justify-end items-center  pt-5 gap-8 sm:gap-0">
                        <div class="item flex-2 pb-5 bg-white md:bg-transparent rounded-lg">
                            <div class="flex flex-col md:flex-row  justify-center items-center bg-secondary pt-3 pb-3 pl-5 pr-5 gap-3 rounded-md text-center">
                                <p class="text-white font-bold text-2xl md:text-2xl">CONSTRUYE TU ESPACIO EN INTERNET</p>
                                <div>
                                    <a href="https://odoo.unificadesign.com.py/r/Jvb" target="_blank" >
                                    <Button type="primary" title="¡Solicita tu propuesta!" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="item flex-1 flex flex-col md:flex-row justify-center items-end">
                            <div class="item flex-1 flex  justify-end items-center bg-white md:bg-transparent h-full pb-12">
                                <div class="w-full sm:w-4/5 pr-3">
                                    <div class="flex flex-col gap-3">
                                        <p class="text-2xl font-bold text-secondary text-end uppercase">Transforma tus ideas en soluciones digitales
                                        </p>
                                        <div class="flex md:flex-col flex-row  lg:flex-row gap-2 justify-end ">
                                            <p class="px-2 text-center text-sm bg-secondary text-white font-bold rounded-sm">PRECIO JUSTO 
                                            </p> 
                                            <p class="px-2 text-center text-sm bg-secondary text-white font-bold rounded-sm">ADAPTADOs P/ CEL</p>
                                        </div>
                                        <div class="flex flex-row gap-2 justify-end ">
                                            <p class="px-2 text-sm text-center bg-secondary text-white font-bold rounded-sm">DOMINIO Y HOSTING INCLUIDOS </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="item flex-2 flex items-end h-full">
                                <img class="img-background" src="/img/studio_web_section/imagem_2023-06-14_022851612_edited.webp" alt="studio img"/></div>
                            <div class="item flex-1 flex items-center bg-white md:bg-transparent h-full">
                                <div class="w-full sm:w-4/5 pl-3">
                                    <div class="flex flex-col gap-3">
                                        <p class="text-2xl font-bold text-secondary text-start">SOMOS UNA VERDADERA
                                            FÁBRICA DE SITIOS WEB
                                            
                                        </p>
                                        <div class="flex md:flex-col flex-row  lg:flex-row gap-2 justify-start ">
                                            <p class="px-2 text-center text-sm bg-primary text-white font-bold rounded-sm">BLOG 
                                            </p> 
                                            <p class="px-2 text-center text-sm bg-primary text-white font-bold rounded-sm">TIENDAS VIRTUALES</p>
                                        </div>
                                        <div class="flex flex-row gap-2 justify-start ">
                                            <p class="px-2  text-center text-sm bg-primary text-white font-bold rounded-sm">SITIOS INSTITUCIONALES </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                  </div>
            </div>
        </div>
    </section>
</Container>

