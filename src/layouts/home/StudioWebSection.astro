        mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask-position: center;
        z-index: 8;
        mask-size: 98% 100%;
    }


    .img-background{
        width: 312px;
        height: 437px;
        object-fit: cover;
    }

    .content-img{
        width: 641px;
        height: 505px;
    }


    @media (max-width: 600px) {
        .masked-bg {
            -webkit-mask-image: url("data:image/svg+xml,%3Csvg preserveAspectRatio='none' data-bbox='31 31.868 138 138' viewBox='31 31.868 138 138' height='200' width='200' xmlns='http://www.w3.org/2000/svg' data-type='shape'%3E%3Cg%3E%3Cpath d='M140.413 169.868H31l28.587-138H169l-28.587 138z'/%3E%3C/g%3E%3C/svg%3E%0A");
            mask-image:url("data:image/svg+xml,%3Csvg preserveAspectRatio='none' data-bbox='31 31.868 138 138' viewBox='31 31.868 138 138' height='200' width='200' xmlns='http://www.w3.org/2000/svg' data-type='shape'%3E%3Cg%3E%3Cpath d='M140.413 169.868H31l28.587-138H169l-28.587 138z'/%3E%3C/g%3E%3C/svg%3E%0A");
            mask-size: 98% 64%;
        }

        .image-container {
            position: relative;
            display: inline-block;
        }

        .image-container img {
            display: block;
            width: 100%;
            height: 100%;
        }


        .image-container::after {
            content: '';
            display: block;
        }

        .img-background{
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    }


</style>